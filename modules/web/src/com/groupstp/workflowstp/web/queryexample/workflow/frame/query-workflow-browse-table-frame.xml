<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.groupstp.workflowstp.web.queryexample.workflow.frame.QueryWorkflowBrowseTableFrame"
        messagesPack="com.groupstp.workflowstp.web.queryexample.workflow.frame">
    <dsContext>
        <collectionDatasource id="queriesDs"
                              class="com.groupstp.workflowstp.entity.QueryExample"
                              view="query-browse"/>
    </dsContext>
    <layout expand="queriesTable" spacing="true">
        <filter id="filter"
                applyTo="queriesTable"
                datasource="queriesDs">
            <properties include=".*"/>
        </filter>
        <table id="queriesTable"
               width="100%" multiselect="true">
            <columns>
                <column id="comment"/>
            </columns>
            <rows datasource="queriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true"/>
        </table>
    </layout>
</window>
