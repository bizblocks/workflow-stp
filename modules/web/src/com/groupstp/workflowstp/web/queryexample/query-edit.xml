<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://queryEdit.caption"
        class="com.groupstp.workflowstp.web.queryexample.QueryEdit"
        datasource="queryDs"
        focusComponent="fieldGroup"
        messagesPack="com.groupstp.workflowstp.web.queryexample">
    <dsContext>
        <datasource id="queryDs"
                    class="com.groupstp.workflowstp.entity.QueryExample"
                    view="query-edit"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tabsheet"
            spacing="true">
        <tabSheet id="tabsheet">
            <tab id="dataTab"
                 caption="msg://queryEdit.data">
                <scrollBox id="scrollBox"
                           height="100%"
                           spacing="true">
                    <hbox height="500px"
                          spacing="true"
                          width="100%">
                        <vbox id="genericBox"
                              expand="commentBox"
                              height="100%"
                              margin="true"
                              spacing="true"
                              width="800px">
                            <fieldGroup id="fieldGroup"
                                        caption="msg://queryExample.status"
                                        datasource="queryDs"
                                        width="100%">
                                <column width="100%">
                                    <field caption="msg://queryExample.status"
                                           editable="false"
                                           property="status"/>
                                </column>
                            </fieldGroup>
                            <vbox id="commentBox"
                                  expand="comment"
                                  spacing="true">
                                <label value="msg://queryExample.comment"/>
                                <textArea id="comment"
                                          datasource="queryDs"
                                          property="comment"
                                          width="100%"/>
                            </vbox>
                        </vbox>
                    </hbox>
                </scrollBox>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
