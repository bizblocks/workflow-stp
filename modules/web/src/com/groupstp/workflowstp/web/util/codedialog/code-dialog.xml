<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://codeDialog.caption"
        class="com.groupstp.workflowstp.web.util.codedialog.CodeDialog"
        messagesPack="com.groupstp.workflowstp.web.util.codedialog">
    <dialogMode height="100%"
                resizable="true"
                width="100%"/>
    <layout expand="codeEditor" spacing="true">
        <sourceCodeEditor id="codeEditor"
                          width="100%"/>
        <hbox spacing="true" expand="fakeLabel" width="100%">
            <button id="okBtn"
                    caption="mainMsg://actions.Ok"
                    icon="icons/ok.png"
                    invoke="onOk"/>
            <button id="cancelBtn"
                    caption="mainMsg://actions.Cancel"
                    icon="icons/cancel.png"
                    invoke="onCancel"/>
            <label id="fakeLabel"/>
        </hbox>
    </layout>
</window>
